# Synthetic Data Generation Platform - Environment Variables

# Application Settings
APP_NAME=Synthetic Data Generator
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/synthetic_data
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Storage
STORAGE_PATH=./generated_data
MAX_FILE_AGE_DAYS=7

# API Authentication
API_KEY=your-api-key-here-change-in-production

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Generation Limits
MIN_RECORDS=100
MAX_RECORDS=1000000
DEFAULT_RECORDS=1000
